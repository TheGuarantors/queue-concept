{
  "compilerOptions": {
    "target": "es6",
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
